@model RoleViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="mt-5"> Do You Want To Delete @Model.RoleName Role?</h2>
<br/>
<form asp-action="ConfirmDelete">
    <div class="form-group">
        <label class="col-form-label" asp-for="Id"></label>
        <input readonly class="form-control" asp-for="Id" />

    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="RoleName"></label>
        <input readonly class="form-control" asp-for="RoleName" />

    </div>
    

    <input type="submit" class="btn btn-danger" value="Delete" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>

