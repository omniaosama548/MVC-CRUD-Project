@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/AuthLayOutView.cshtml";
}
<div asp-validation-summary="All" class="text-danger"></div>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Register">
			<input  asp-for="FName"  placeholder="Your First Name" >
			<span class="text-danger" asp-validation-for="FName"></span>
			<br />
			
			<input  asp-for="LName" placeholder="Your Last Name">
			<span class="text-danger" asp-validation-for="LName"></span>
			<br />

			<input  asp-for="Email" placeholder="Your Email">
			<span class="text-danger" asp-validation-for="Email"></span>
			<br />

			<input  asp-for="Password" placeholder="Your Password">
			<span class="text-danger" asp-validation-for="Password"></span>
			<br />

			<input asp-for="ConfirmPassword" placeholder="Conform Your Password">
			<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
			<br />
			<div class="wthree-text">
				<label class="anim">
					<input  class="checkbox" asp-for="IsAgree">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Do You Have an Account? <a asp-action="Login"> Login Now!</a></p>
	</div>
</div>
@section ValidationScriptsPartial
{
<partial name="_ValidationScriptsPartial" />
}